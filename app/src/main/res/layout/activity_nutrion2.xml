<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/coordLayout2"
    android:background="@color/purple"
    tools:context=".NutrionActivity2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@drawable/divider"
        android:showDividers="middle"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:fontFamily="@font/hvdcomicsans"
                android:gravity="center"
                android:text="Almost there"
                android:textColor="@color/white"
                android:textSize="24dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="260dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="305dp"
                android:layout_height="55dp"
                android:background="@drawable/textbox"
                android:textColor="@color/black"
                android:gravity="center"
                android:text="How much do you exercise ?"
                android:textSize="18dp" />

            <RadioGroup
                android:id="@+id/radioGroup1"
                android:layout_width="match_parent"
                android:layout_height="209dp"
                android:gravity="center">

                <RadioButton
                    android:id="@+id/sedentary"
                    android:layout_width="320dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Sedentary (Little to no exercise)"
                    android:textColor="@color/white"
                    android:textSize="18dp" />

                <RadioButton
                    android:id="@+id/lightAct"
                    android:layout_width="320dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Lightly Active (Exercise less than 3 days a week)"
                    android:textColor="@color/white"
                    android:textSize="18dp" />

                <RadioButton
                    android:id="@+id/active"
                    android:layout_width="320dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Active (Exercise 3-5 days a week)"
                    android:textColor="@color/white"
                    android:textSize="18dp" />

                <RadioButton
                    android:id="@+id/veryAct"
                    android:layout_width="320dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Very Active (Exercise everyday)"
                    android:textColor="@color/white"
                    android:textSize="18dp" />
            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="305dp"
                android:layout_height="55dp"
                android:textColor="@color/black"
                android:background="@drawable/textbox"
                android:gravity="center"
                android:text="What is your end goal ?"
                android:textSize="18dp" />

            <RadioGroup
                android:id="@+id/radioGroup2"
                android:layout_width="match_parent"
                android:layout_height="154dp"
                android:gravity="center">

                <RadioButton
                    android:id="@+id/loseWeight"
                    android:layout_width="320dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Lose weight(0.5kg per week)"
                    android:textColor="@color/white"
                    android:textSize="18dp" />

                <RadioButton
                    android:id="@+id/maintain"
                    android:layout_width="320dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Maintain current weight"
                    android:textColor="@color/white"
                    android:textSize="18dp" />

                <RadioButton
                    android:id="@+id/gainWeight"
                    android:layout_width="320dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Gain Weight(0.5kg per week)"
                    android:textColor="@color/white"
                    android:textSize="18dp" />

            </RadioGroup>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"

                android:divider="@drawable/smaller_divider"
                android:showDividers="middle"
                android:orientation="vertical">

                <Button
                    android:id="@+id/calculateMacros"
                    android:layout_width="250dp"
                    android:layout_height="50dp"
                    android:text="Calculate" />

                <Button
                    android:id="@+id/homepage"
                    android:layout_width="250dp"
                    android:layout_height="50dp"
                    android:text="Homepage" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>