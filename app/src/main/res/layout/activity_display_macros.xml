<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple"
    tools:context=".DisplayMacros">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="86dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="78dp"
                android:fontFamily="@font/hvdcomicsans"
                android:gravity="center"
                android:text="Your Results"
                android:textColor="@color/white"
                android:textSize="24dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="370dp"
                android:layout_height="72dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="120dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:background="@drawable/displaybox"
                    android:fontFamily="@font/lemon_bold"
                    android:gravity="center"
                    android:text="Daily Calorie Intake"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/dailyCalIntake"
                    android:layout_width="80dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/lemon_bold"
                    android:gravity="center"
                    android:text="TextView"
                    android:textColor="@color/black" />
            </LinearLayout>

            <TextView
                android:id="@+id/random"
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:fontFamily="@font/hvdcomicsans"
                android:gravity="center"
                android:text="Daily Macros "
                android:textColor="@color/white"
                android:textSize="24dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="205dp"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="370dp"
                    android:layout_height="68dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView10"
                        android:layout_width="100dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:background="@drawable/displaybox"
                        android:fontFamily="@font/lemon_bold"
                        android:gravity="center"
                        android:text="Carbohydrates"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/dailyCarbs"
                        android:layout_width="80dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:fontFamily="@font/lemon_bold"
                        android:textColor="@color/black"
                        android:text="TextView" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="370dp"
                    android:layout_height="68dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView12"
                        android:layout_width="100dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:background="@drawable/displaybox"
                        android:fontFamily="@font/lemon_bold"
                        android:gravity="center"
                        android:text="Proteins"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/dailyProteins"
                        android:layout_width="80dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/lemon_bold"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:text="TextView" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="370dp"
                    android:layout_height="68dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView14"
                        android:layout_width="100dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:background="@drawable/displaybox"
                        android:fontFamily="@font/lemon_bold"
                        android:gravity="center"

                        android:text="Fats"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/dailyFats"
                        android:layout_width="80dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/lemon_bold"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:text="TextView"
                         />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="259dp"
                android:gravity="center"
                android:divider="@drawable/smaller_divider"
                android:showDividers="middle"
                android:orientation="vertical">

                <Button
                    android:id="@+id/button"
                    android:layout_width="270dp"
                    android:layout_height="55dp"
                    android:text="Generate Meal Plan" />

                <Button
                    android:id="@+id/macroToHome"
                    android:layout_width="270dp"
                    android:layout_height="55dp"
                    android:text="Homepage " />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>